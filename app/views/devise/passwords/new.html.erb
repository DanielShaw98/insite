<div class="menubar-container-forgot">
  <%= link_to root_path, class: "root-link-1" do%>
    <h1 class="menubar-title-forgot">insite</h1>
  <% end %>
</div>

<div class="authenticate-bg">
  <div class="forgot-password-card">
    <%= link_to 'javascript:history.back()', class: "back-btn" do %>
      <ion-icon name="arrow-back-outline"></ion-icon>
    <% end %>
    <h2 class="authenticate-header">Forgot password?</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>

      <div class="field forgot-form-container">
        <%= f.text_field :email, autofocus: true, class: "forgot-form-field", placeholder: "Email", autocomplete: "email" %>
      </div>

      <div class="actions">
        <%= button_tag type: 'submit', class: "login-btn" do %>
          <span class="login-btn-text">Send reset password instructions</span><ion-icon class="login-btn-icon" name="arrow-forward-outline"></ion-icon>
        <% end %>
      </div>
    <% end %>

  </div>
</div>

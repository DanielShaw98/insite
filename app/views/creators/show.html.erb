<% if current_user %>
  <%= render "components/top-navbar-2" %>
<% else %>
  <%= render "components/top-navbar-1" %>
<% end %>

<div class="creator-profile-container">
  <div class="creator-profile-card">
    <div class="creator-profile-banner">
      <div class="name-avatar-position">
        <div class="user-profile-avatar"><%= user_avatar(@creator.user) %></div>
        <div class="name-title-position">
          <h1 class="username-title"><%= @creator.user.username %></h1>
          <h2 class="user-full-name"><%= @creator.user.first_name%> <%= @creator.user.last_name %></h2>
          <h4 class="creator-profile-specialisation"><%= @creator.user.creator.specialisation %></h4>
        </div>
      </div>
      <div class="creator-subscribe-button-container">
        <%= render "components/following-form-profile" %>
      </div>
    </div>
    <div data-controller="creator-profile-toggle" data-user-id="<%= @creator.user.id %>" data-creator-id="<%= @creator.id %>">
      <div class="creator-title-toggle-container">
        <div id="creator-profile-courses" class="creator-title-courses" data-action="click->creator-profile-toggle#toggle" data-creator-profile-toggle-target="title">Guides</div>
        <div id="creator-profile-pledges" class="creator-title-pledges" data-action="click->creator-profile-toggle#toggle" data-creator-profile-toggle-target="title">Pledges</div>
      </div>
      <div id="partial-container">
      </div>
    </div>
  </div>
</div>

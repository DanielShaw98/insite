<div class="user-profile-container">
  <div class="user-profile-banner">
    <div class="user-profile-avatar"><%= image_tag @user.avatar_image_url %></div>
  </div>
  <div class="name-title-position">
    <h1 class="username-title"><%= @user.username %></h1>
    <h2 class="user-full-name"><%= @user.first_name%> <%= @user.last_name %></h2>
  </div>
  <div class="user-title-toggle-container" data-controller="user-profile-toggle">
    <div id="user-title-purchases" data-action="click->user-profile-toggle#toggle" data-user-profile-toggle-target="title">Purchases</div>
    <div id="user-title-subscriptions" data-action="click->user-profile-toggle#toggle" data-user-profile-toggle-target="title">Subscriptions</div>
    <div id="user-title-pledges" data-action="click->user-profile-toggle#toggle" data-user-profile-toggle-target="title">Pledges</div>
    <div id="user-title-reviews" data-action="click->user-profile-toggle#toggle" data-user-profile-toggle-target="title">Reviews</div>
  </div>
</div>
